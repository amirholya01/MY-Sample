@model List<Courses.Web.Entities.Courses.CourseSession>

@if (Model != null && Model.Any())
{
    <table class="table table-hover table-striped table-bordered">
        <thead>
        <th>Title</th>
        <th>Display order</th>
        <th>Commands</th>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr id="course-session-@item.Id">
                <td>@item.Title</td>
                <td>@item.DisplayOrder</td>
                <td>
                    <a custom-popup-page
                       custom-popup-page-url="@Url.ActionLink("EditCourseSession", "Course", new { area = "Admin", Id = item.Id })"
                       custom-popup-page-target="EditCourseSession"
                       custom-popup-page-handler="createCourseSessionHandler"
                       class="btn btn-warning btn-xs btn-circle">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a class="btn btn-danger btn-xs btn-circle" onclick="deleteCourseSession(@item.Id)">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <p>There is no session for this course</p>
    </div>
}